
@{
    ViewBag.Title = "Index";
}

@model leet.Models.Types



@{
    using (Html.BeginForm("Index", "Home", new { @class = "bg-light p-5 contact-form form-group input" }))
    {

        <div class="container">
            @Html.TextBox("username", null, new { @class = "form-control", @placeholder = "Username", autocomplete = "off" })
        </div>

        <div class="container">
            @Html.TextArea("text", htmlAttributes: new { @class = "form-control", @placeholder = "Text", autocomplete = "off", @rows = 8, @cols = 100 })
        </div>
        <div class="container">
            @Html.DropDownListFor(x => x.SelectedItemId, Model.TypeNames, new { @class = "form-control" })
        </div>


        <div class="form-group" style="position:absolute;;">
            <input type="submit" value="Submit" class="btn btn-primary py-3 px-5" style=" width: 100px">
        </div>



    }
}


